<% if (user) { %>

<section class="thoughts-section">
  <div class="rounded-box date-box">
    <div class="date-content">Your Thoughts From: <%= thought.date.toLocaleDateString() %></div>
  </div>
  <form id="update-thought" action="/thoughts/<%= thought._id %>" method="POST">
    <div class="rounded-box">
      <label for="goingWell"> What is going well for you at the moment?</label>
      <textarea name="goingWell" id="updateGoingWell"><%= thought.goingWell %></textarea>
      <label for="updateGoingWell">(click to edit...) </label>
    </div>

    <div class="rounded-box">
      <label for="worries"> What is worrying you at the moment?</label>
      <textarea name="worries" id="updateWorries"><%= thought.worries %></textarea>
            <label for="updateWorries">(click to edit...) </label>
    </div>

    <div class="rounded-box">
      <label for="feeling">Overall, how do you feel today...</label>
      <div name="feeling" id="feeling"><%= thought.feeling %></div>
      <label for="updateFeeling"></label> <select name="feeling" id="updateFeeling">
        <option value="" disabled selected>⚖️</option>
         <option value="😄">😄</option>
      <option value="😊">😊</option>
      <option value="🙂">🙂</option>
      <option value="😐">😐</option>
      <option value="😕">😕</option>
      <option value="😢">😢</option>
      <option value="😠">😠</option>
      <option value="😡">😡</option>
      <option value="😤">😤</option>
      <option value="🤬">🤬</option>
     
      </select>
    </div>
    
    <input type="submit" value="Save & Close">
  </form>
</section>

   
<% } %>




 <%- include('../partials/footer') %>