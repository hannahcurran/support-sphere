 <%- include('../partials/header') %>
  <% if (user) { %>
<br><br>
<h2>A Space For Your Thoughts</h2> <br>
<h3> Support Sphere is a place where you're respected, valued, and encouraged to share your thoughts openly.</h3>
  
  <form id="thoughts-form" action="/thoughts" method= "POST">
    <label for="date"></label>
  <br>
  <input type="date" name="date" id="date" required>
  <br><br>
  <label for="goingWell">What do you think is going well for you at the moment?</label>
    <br>
    <textarea name="goingWell" id="goingWell" required></textarea>
    <br><br>
    <label for="worries">What is worrying you at the moment?</label>
    <br>
    <textarea name="worries" id="worries" required></textarea>
    <br><br>
    <label for="feeling">On a scale of 1-10, how do you feel today...</label>
    <br>
    <select name="feeling" id="feeling">
    <option value="" disabled selected>⚖️</option>
      <option value="😄">😄</option>
      <option value="😊">😊</option>
      <option value="🙂">🙂</option>
      <option value="😐">😐</option>
      <option value="😕">😕</option>
      <option value="😢">😢</option>
      <option value="😠">😠</option>
      <option value="😡">😡</option>
      <option value="😤">😤</option>
      <option value="🤬">🤬</option>
    </select>
    <br><br>
    <input type="submit" value="Save">
  </form>

<div id="thoughts-container"></div>

<br><br>

<h4>Your Saved Thoughts:</h4>



<table class = "thoughts-log">
     <thead>
      <tr>
        <th>Date</th>
        <th>Details</th>
        </tr>
      </thead>
      <tbody>
    <% thoughts.forEach(function(t) { %>         
      <tr>
        <td>
          <div><%= t.date.toLocaleDateString() %></div>
        </td>
        <td>
          <a href="/thoughts/show/<%= t._id %>"><button>View</button></a>
             </td>
        </div>
        </td>
      </tr>
        <% }) %>

  <% } %>
  <%- include('../partials/footer') %>
