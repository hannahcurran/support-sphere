 <%- include('../partials/header') %>
  <% if (user) { %>
<section class="thoughts-section">

<img src="/images/SSthoughts.png" alt="Thoughts-header Image" class="SS-thoughts-header-image">

  <h3 class="thoughts-page-h3">Support Sphere is a place where you're respected, valued, and encouraged to share your thoughts openly.</h3>
  <br>

  <form id="thoughts-form" action="/thoughts" method="POST">
    <label for="date"></label>

    <input type="date" name="date" id="date" required>
  <br>
  <label for="goingWell">What do you think is going well for you at the moment?</label>
    
    <textarea name="goingWell" id="goingWell" required></textarea>
    <br>
    <label for="worries">What is worrying you at the moment?</label>
        <textarea name="worries" id="worries" required></textarea>
    <br>

    <label for="feeling">Overall, how do you feel today...</label>
        <select name="feeling" id="feeling">
    <option value="" disabled selected>⚖️</option>
      <option value="😄">😄</option>
      <option value="😊">😊</option>
      <option value="🙂">🙂</option>
      <option value="😐">😐</option>
      <option value="😕">😕</option>
      <option value="😢">😢</option>
      <option value="😠">😠</option>
      <option value="😡">😡</option>
      <option value="😤">😤</option>
      <option value="🤬">🤬</option>
    </select>
      <input type="submit" value="Save">
  </form>


<div id="thoughts-container"></div>


<% if (user) { %>
<h3>Your Saved Thoughts:</h3>

<table class = "thoughts-log">
     <thead>
      <tr>
        <th>Date</th>
        <th>Details</th>
        </tr>
      </thead>
      <tbody>
    <% thoughts.forEach(function(t) { %>         
      <tr>
        <td>
          <div><%= t.date.toLocaleDateString() %></div>
        </td>
        <td>
          <a href="/thoughts/show/<%= t._id %>"><button>🔍</button></a>
            </td>
            </tr>
            <% }) %>
          </tbody>
         </table>
         <% } else { %>
         <p>Please log in to view your saved thoughts.</p>
          <% } %>
        </section>
  <% } %>
  <%- include('../partials/footer') %>

  
